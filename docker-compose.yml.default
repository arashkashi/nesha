version: '3'
services:
  app:
    build:
      context: .
      dockerfile: .docker/Dockerfile
    image: nesha
    ports:
      - 8080:2015
    network_mode: "host"
    volumes:
      - .:/srv/app
    environment:
      DB_CONNECTION: mysql
      DB_HOST: 127.0.0.1
      DB_PORT: 3306
      DB_DATABASE: client
      DB_USERNAME: client
      DB_PASSWORD: client
